<h1>Lista de hospedes</h1>

<table>
  <tr>
    <th>Nome</th>
    <th>Endereço</th>
    <th>Nascimento</th>
    <th>Pais</th>
    <th>Sexo</th>
    <th>Estado Civil</th>
  </tr>

<% for hospede in @hospedes %>
  <tr>
    <td><%=h hospede.nome %></td>
    <td><%=h hospede.endereco %></td>
    <td><%=h hospede.nascimento %></td>
    <td><%=h hospede.pais %></td>
    <td><%=h hospede.sexo %></td>
    <td><%=h hospede.estCivil %></td>
    <td><%= link_to 'Exibir', hospede %></td>
    <td><%= link_to 'Editar', edit_hospede_path(hospede) %></td>
    <td><%= link_to 'Remover', hospede, :confirm => 'Você tem certeza?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'Inserir novo hospede', new_hospede_path %>
