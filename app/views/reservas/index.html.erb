<h1>Listando reservas</h1>

<table>
  <tr>
    <th>Hospede</th>
    <th>Tipo de apartamento</th>
    <th>Data de entrada</th>
    <th>Data de saida</th>
    <th colspan="3">Opções</th>
  </tr>

<% par_impar = 0
  for reserva in @reservas 
	par_impar = 1 - par_impar %>
  <tr class="listLine<%= par_impar %>">
    <td><%=h Hospede.find(reserva.fkHospedes).nome %></td>
    <td><%=h TiposApartamento.find(reserva.fkTiposApartamentos).nome %></td>
    <td><%=h reserva.dataEntrada %></td>
    <td><%=h reserva.dataSaida %></td>
    <td width="5%"><%= link_to 'Exibir', reserva %></td>
    <td width="5%"><%= link_to 'Editar', edit_reserva_path(reserva) %></td>
    <td width="5%"><%= link_to 'Remover', reserva, :confirm => 'Você tem certeza?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'Inserir nova reserva', new_reserva_path %>
