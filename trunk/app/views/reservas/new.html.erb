<h1>Inserindo reserva</h1>

<% form_for(@reserva) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :hospede %><br />
	<%= f.select("fkHospedes", Hospede.all.collect {|h| [ h.nome, h.id ] }, {:include_blank => true}) %>
  </p>
  <p>
    <%= f.label "Tipo de apartamento"%><br />
  	<%= f.select("fkTiposApartamentos", TiposApartamento.all.collect {|t| [ t.nome, t.id ] }, {:include_blank => true}) %>
  </p>
  <p>
    <%= f.label "Data de entrada" %><br />
    <%= f.date_select :dataEntrada %>
  </p>
  <p>
    <%= f.label "Data de saida" %><br />
    <%= f.date_select :dataSaida %>
  </p>
  <p>
    <%= f.submit "Inserir" %>
  </p>
<% end %>

<%= link_to 'Voltar', reservas_path %>
