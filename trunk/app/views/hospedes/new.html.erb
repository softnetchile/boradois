<h1>Inserindo hospede</h1>

<% form_for(@hospede) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :nome %><br />
    <%= f.text_field :nome %>
  </p>
  <p>
    <%= f.label :endereco %><br />
    <%= f.text_field :endereco %>
  </p>
  <p>
    <%= f.label :nascimento %><br />
    <%= f.date_select :nascimento %>
  </p>
  <p>
    <%= f.label :pais %><br />
    <%= f.text_field :pais %>
  </p>
  <p>
  Sexo<br />
  <%= select("hospede","sexo", Hospede.generos, {} , { :new => nil }) %>
  <%= #f.label :sexo %><br />    <%= f.text_field :sexo 
  %>
  </p>
  <p>
    Estado civil<br />
    <%= select("hospede","estCivil", Hospede.estadosCivis , {} , { :new => nil }) %>
    <%= #f.label :estCivil %><br />    <%= f.text_field :estCivil 
    %>
  </p>
  <p>
    <%= f.submit "Inserir" %>
  </p>
<% end %>

<%= link_to 'Voltar', hospedes_path %>
